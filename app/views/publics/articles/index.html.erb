<div class="toppage">
  <div class="container-flaud">
    <div class="row">
        <h1>記事一覧</h1>
        <div class="col-md-4 col-sm-6 col-xs-6" style="padding:0px">
          <div class="flex">
            <% @articles.each do |article| %>
            <div class="row">
              <div class="col-md-11 " style="background-color: white; margin: 5px 20px 5px; border-radius: 1px;">
                <div>
                  <%= link_to publics_article_path(article.id) do %>
                    <%= attachment_image_tag article, :image, :fill, 1000, 1000, format: 'jpeg', size: '150x150' %>
                  <% end %>
                </div>
                <div class="size_test2"><%= article.title %>
                </div>
              </div>
              <div style="padding:30px;">
                <%= form_for [:public, @interest_new], url: publics_interests_path(article_id: article.id) do |f| %>
                  <%= button_tag( class: "btn btn-primary btn-block") do %>
                    <%= content_tag :span, "　気になる", class: "glyphicon glyphicon-pencil" %>
                  <% end %>
                <% end %>
              </div>
            </div>
            <% end %>
          </div>
        </div>
 <%= render 'publics/articles/rank' %>
  </div>
</div>
</div>



        <div class="pagiWrapper">
            <%= paginate @articles %>
        </div>