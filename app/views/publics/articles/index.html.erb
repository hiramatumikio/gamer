<div class="toppage">
  <div class="container-flaud">
    <div class="row">
      <div class="col-md-9">
        <div class="col-md-3">
        <h1>記事一覧</h1>
          
            <% @articles.each do |article| %>
            <div class="row">
              <div class="col-md-11 " style="background-color: white; margin: 0px 30px 10px; border-radius: 10px;">
                <div>
                  <%= link_to publics_article_path(article.id) do %>
                    <%= attachment_image_tag article, :image, :fill, 1000, 1000, format: 'jpeg', size: '200x200' %>
                  <% end %>
                </div>
                <div>タイトル　<%= article.title %>
                </div>
              </div>
              <div class="col-md-5" style="padding:0px;">
                <%= form_for [:public, @interest_new], url: publics_interests_path(article_id: article.id) do |f| %>
                  <%= button_tag( class: "btn btn-primary btn-block") do %>
                    <%= content_tag :span, "　気になる", class: "glyphicon glyphicon-pencil" %>
                  <% end %>
                <% end %>
              </div>
            </div>
            <% end %>
</div>

            <div class="col-md-3">
              <div class="row text-center">
                <h1><div class="label" style="background-color: #880000";>   ランキング</div></h1>

                  <% @all_ranks.each.with_index(1) do |note| %>
                    <div class="col-md-11 " style="background-color: white; margin: 0px 30px 10px; border-radius: 10px;">
                      <div class="col-md-8 text-left">
                        <%= link_to publics_article_path(note.id) do %>
                          <%= attachment_image_tag note, :image, :fill, 1000, 1000, format: 'jpeg', size: '200x200' %>
                        <% end %>
                      </div>
                      <div>タイトル　<%= note.title %>
                      </div>
                    </div>
                  <% end %>
              </div>
              </div>
            
          </div>
        </div>
    </div>
  </div>
</div>

        <div class="pagiWrapper">
            <%= paginate @articles %>
        </div>